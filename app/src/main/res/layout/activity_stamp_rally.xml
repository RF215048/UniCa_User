<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".StampRally">

    <Button
            android:text="@string/mapSearchText"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:id="@+id/button_MapSearch"
            android:textSize="24sp"
            android:background="@color/colorPrimary"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_ShopSearch"
            />

    <Button
            android:text="@string/searchText"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:id="@+id/button_ShopSearch"
            android:textSize="24sp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            app:layout_constraintStart_toEndOf="@+id/button_MapSearch"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_ShopInfo"
            />

    <Button
            android:text="@string/shopInfoText"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:id="@+id/button_ShopInfo"
            android:textSize="24sp"
            android:background="@color/colorPrimary"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            app:layout_constraintStart_toEndOf="@+id/button_ShopSearch"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_Settings"/>

    <Button
            android:text="@string/settingsText"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:id="@+id/button_Settings"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/button_ShopInfo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/common_google_signin_btn_text_dark_default"/>

    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:id="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/imageView3"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView22"/>

    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:id="@+id/imageView3"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintEnd_toStartOf="@+id/imageView4"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView22"/>

    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/common_google_signin_btn_icon_dark_normal_background"
            android:id="@+id/imageView4"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView22"
            android:layout_marginTop="32dp"/>

    <TextView
            android:text="@string/textStanpRally"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView22"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="57dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="36sp"
            android:textColor="@color/colorAccent"/>

    <Button
            android:text="@string/textQRcodeReader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_QRcodeReader"
            android:textSize="24sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/button_ShopInfo"
            android:layout_marginTop="98dp"
            app:layout_constraintTop_toBottomOf="@+id/textScaned"/>

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@android:drawable/sym_def_app_icon"
            android:id="@+id/stamp1"
            app:layout_constraintEnd_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="@+id/imageView"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"/>

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@android:drawable/sym_def_app_icon"
            android:id="@+id/stamp2"
            app:layout_constraintTop_toTopOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="@+id/imageView3"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="@+id/imageView3"/>

    <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:srcCompat="@android:drawable/sym_def_app_icon"
            android:id="@+id/stamp3"
            app:layout_constraintTop_toTopOf="@+id/imageView4"
            app:layout_constraintStart_toStartOf="@+id/imageView4"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintEnd_toEndOf="@+id/imageView4"/>

    <TextView
            android:text="@string/textExplainStamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView25"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:textSize="24sp"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"/>

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textScaned"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView25"
            app:layout_constraintBottom_toTopOf="@+id/button_QRcodeReader"/>

</android.support.constraint.ConstraintLayout>