<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ShopInfo">

    <TextView
            android:text="@string/text_caution"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView14"
            app:layout_constraintTop_toBottomOf="@+id/button_Banner"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"/>

    <Button
            android:text="@string/mapSearchText"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:id="@+id/button_MapSearch"
            android:textSize="24sp"
            android:background="@color/colorPrimary"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_ShopSearch"/>

    <Button
            android:text="@string/searchText"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:id="@+id/button_ShopSearch"
            android:textSize="24sp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            app:layout_constraintStart_toEndOf="@+id/button_MapSearch"
            app:layout_constraintEnd_toStartOf="@+id/button_ShopInfo"
            app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
            android:text="@string/shopInfoText"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:id="@+id/button_ShopInfo"
            android:textSize="24sp"
            android:background="@android:color/darker_gray"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            app:layout_constraintStart_toEndOf="@+id/button_ShopSearch"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_Settings"/>

    <Button
            android:text="@string/settingsText"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:id="@+id/button_Settings"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/button_ShopInfo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/common_google_signin_btn_text_dark_default"/>

    <Button
            android:text="@string/textStanpRally"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_stampRally"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_ShopInfo"
            app:layout_constraintTop_toBottomOf="@+id/scrollView3"
            android:textSize="24sp"
            android:background="@color/colorAccent"
            android:textColor="@color/common_google_signin_btn_text_dark_default"/>

    <ScrollView
            android:layout_width="0dp"
            android:layout_height="470dp"
            android:id="@+id/scrollView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_stampRally"
            app:layout_constraintTop_toBottomOf="@+id/textView14"
            >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <Button
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:id="@+id/button_ticket1"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/textView_name1"
                        android:background="@drawable/ramen_ikkyu01"
                        app:layout_constraintEnd_toStartOf="@+id/button_ticket2"
                        android:layout_marginTop="50dp"/>

                <Button
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:id="@+id/button_ticket2"
                        android:textSize="14sp"
                        android:background="@drawable/ramen_sankyuu01"
                        app:layout_constraintStart_toEndOf="@+id/button_ticket1"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="50dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/textView_name2"/>

                <Button
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:id="@+id/button_ticket"
                        android:textSize="14sp"
                        android:background="@drawable/sample"
                        app:layout_constraintStart_toEndOf="@+id/button_ticket1"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="50dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/textView_name2"/>

            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:text="@string/text_ikkyu"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_name1"
                        app:layout_constraintTop_toBottomOf="@+id/button_ticket1"
                        app:layout_constraintEnd_toEndOf="@+id/button_ticket1"
                        app:layout_constraintStart_toStartOf="@+id/button_ticket1"
                        android:textSize="24sp"
                        android:textColor="@color/colorAccent"/>

                <TextView
                        android:text="@string/text_sankyu"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_name2"
                        android:textSize="24sp"
                        android:textColor="@color/colorAccent"
                        app:layout_constraintEnd_toEndOf="@+id/button_ticket2"
                        app:layout_constraintStart_toStartOf="@+id/button_ticket2"
                        app:layout_constraintTop_toBottomOf="@+id/button_ticket2"/>

                <TextView
                        android:text="@string/textShopName"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_name"
                        android:textSize="24sp"
                        android:textColor="@color/colorAccent"
                        app:layout_constraintEnd_toEndOf="@+id/button_ticket2"
                        app:layout_constraintStart_toStartOf="@+id/button_ticket2"
                        app:layout_constraintTop_toBottomOf="@+id/button_ticket2"/>
            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <Button
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:id="@+id/button_ticket3"
                        android:textSize="14sp"
                        android:background="@drawable/ramen_oosakaya01"
                        android:layout_marginTop="50dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView_name1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/textView_name3"
                        app:layout_constraintEnd_toStartOf="@+id/button_ticket4"
                        />

                <Button
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:id="@+id/button_ticket4"
                        android:textSize="14sp"
                        android:background="@drawable/ramen_sanpei01"
                        android:layout_marginTop="50dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView_name2"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/button_ticket3"
                        app:layout_constraintBottom_toTopOf="@+id/textView_name4"/>
            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:text="@string/text_oosakaya"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_name3"
                        android:textSize="24sp"
                        android:textColor="@color/colorAccent"
                        app:layout_constraintStart_toStartOf="@+id/button_ticket3"
                        app:layout_constraintEnd_toEndOf="@+id/button_ticket3"
                        app:layout_constraintTop_toBottomOf="@+id/button_ticket3"
                        android:layout_width="200dp"/>

                <TextView
                        android:text="@string/text_sanpei"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_name4"
                        android:textSize="24sp"
                        android:textColor="@color/colorAccent"
                        app:layout_constraintEnd_toEndOf="@+id/button_ticket4"
                        app:layout_constraintStart_toStartOf="@+id/button_ticket4"
                        app:layout_constraintTop_toBottomOf="@+id/button_ticket4"/>
            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <Button
                        android:layout_width="200dp"
                        android:layout_height="120dp"
                        android:id="@+id/button_ticket5"
                        android:textSize="14sp"
                        android:background="@drawable/ramen_syuuchan01"
                        android:layout_marginTop="50dp"
                        app:layout_constraintTop_toBottomOf="@+id/textView_name3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/button_ticket5"
                        />

            </TableRow>

            <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TextView
                        android:text="@string/text_shuuchan"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/textView_name5"
                        android:textSize="24sp"
                        android:textColor="@color/colorAccent"
                        app:layout_constraintTop_toBottomOf="@+id/button_ticket5"
                        app:layout_constraintStart_toStartOf="@+id/button_ticket5"
                        app:layout_constraintEnd_toEndOf="@+id/button_ticket5"/>
            </TableRow>

        </LinearLayout>
    </ScrollView>

    <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_Banner"
            android:background="@drawable/b20190126_1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/scrollView3"/>

</android.support.constraint.ConstraintLayout>