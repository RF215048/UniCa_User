<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Settings">

    <Button
            android:text="@string/mapSearchText"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:id="@+id/button_MapSearch"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textSize="24sp"
            app:layout_constraintEnd_toStartOf="@+id/button_ShopSearch"
            android:background="@color/colorPrimary"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"/>

    <Button
            android:text="@string/searchText"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:id="@+id/button_ShopSearch"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/button_MapSearch"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/button_ShopInfo"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/common_google_signin_btn_text_dark_default"/>

    <Button
            android:text="@string/shopInfoText"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:id="@+id/button_ShopInfo"
            android:textSize="24sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/button_ShopSearch"
            android:background="@color/colorPrimary"
            android:textColor="@color/common_google_signin_btn_text_dark_focused"
            app:layout_constraintEnd_toStartOf="@+id/button_Settings"/>

    <Button
            android:text="@string/settingsText"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:id="@+id/button_Settings"
            android:textSize="24sp"
            app:layout_constraintStart_toEndOf="@+id/button_ShopInfo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@android:color/darker_gray"
            android:textColor="@color/common_google_signin_btn_text_dark_default"/>

    <TextView
            android:text="@string/settingsText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="32dp"
            android:textSize="35sp"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/button_ChangeInfo"/>

    <Button
            android:text="@string/changeInfoText"
            android:layout_width="400dp"
            android:layout_height="80dp"
            android:id="@+id/button_ChangeInfo"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView24"
            android:textSize="30sp"
            android:background="@color/colorPrimary"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/button_Help"/>

    <Button
            android:text="@string/helpText"
            android:layout_width="400dp"
            android:layout_height="80dp"
            android:id="@+id/button_Help"
            android:textSize="30sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_ChangeInfo"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/button_Inquiry"/>

    <Button
            android:text="@string/inquiryText"
            android:layout_width="400dp"
            android:layout_height="80dp"
            android:id="@+id/button_Inquiry"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_Help"
            android:background="@color/colorPrimary"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/button_Deleate"/>

    <Button
            android:text="@string/deleateInfoText"
            android:layout_width="400dp"
            android:layout_height="80dp"
            android:id="@+id/button_Deleate"
            android:textSize="30sp"
            android:background="@color/colorPrimaryDark"
            android:textColor="@color/common_google_signin_btn_text_dark_default"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_Inquiry"
            android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/button_Logout"/>

    <Button
            android:text="@string/logoutText"
            android:layout_width="400dp"
            android:layout_height="80dp"
            android:id="@+id/button_Logout"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_Deleate"
            android:background="@color/colorPrimary"
            app:layout_constraintBottom_toTopOf="@+id/button_ShopInfo"
            android:layout_marginBottom="16dp"/>
</android.support.constraint.ConstraintLayout>